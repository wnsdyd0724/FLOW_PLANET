<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Statistics_Day_Activity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/statistics_day">

        <Button
            android:id="@+id/Btn_STAD_Home"
            android:background="@android:color/transparent"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/Btn_STAD_Back"
            android:background="@android:color/transparent"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/Btn_STAD_Statistics_Day"
            android:background="@android:color/transparent"
            android:layout_width="105dp"
            android:layout_height="55dp"
            android:layout_marginTop="680dp" />

        <Button
            android:id="@+id/Btn_STAD_Statistics_Week"
            android:background="@android:color/transparent"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="680dp" />

        <Button
            android:id="@+id/Btn_STAD_Statistics_Month"
            android:background="@android:color/transparent"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="195dp"
            android:layout_marginTop="680dp" />

    </FrameLayout>
</ScrollView>